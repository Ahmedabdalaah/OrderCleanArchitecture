@model IEnumerable<ConsumeWebApiMVC.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "GetAllEmployee";
}
&nbsp;
&nbsp;
&nbsp;
<div class="text-end">
    <a class="btn btn-outline-primary" asp-controller="Employee" asp-action="AddEmployee">   &nbsp;  إضافة موظف جديد &nbsp;  <i class="bi bi-person-plus"></i></a>
</div>
&nbsp;
&nbsp;
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-light">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
            <td>
               <a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@item.Id" class=" btn-success">
                        <i class="bi bi-pencil"></i>
                    </a>
            </td>
                <td>
                    <a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-id="@item.Id" class=" btn-danger">
                        <i class="bi  bi-trash3-fill"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
