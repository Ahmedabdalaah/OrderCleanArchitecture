@model IEnumerable<ConsumeWebApiMVC.Models.CategoryViewModel>

@{
    ViewData["Title"] = "GetAllCategories";
}
<hr/>
<hr/>
<div class="text-end">
<p>
        <a class="btn btn-success " style="font-size:large" asp-action="AddCategory">إضافة قسم جديد &nbsp;  <i class="bi bi-person-plus"></i> </a>
</p>
<hr/>
<hr/>
<table class="table table-hover">
    <thead>
        <tr "table-info">
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr "table-light">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                    <td>
                        <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@item.Id" class="btn-success">
                            <i class="bi bi-pencil"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn-danger">
                            <i class="bi  bi-trash3-fill"></i>
                        </a>
                    </td>
        </tr>
}
    </tbody>
</table>
